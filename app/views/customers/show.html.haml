%p#notice= notice
%p
  %strong Full name:
  = @customer.full_name
%p
  %strong Phone number:
  = @customer.phone_number
%p
  %strong Email addess:
  = @customer.email_address
%p
  %strong Image:
  = @customer.image
%p
  %strong Province:
  = @customer.province.nil? ? 'None' : @customer.province.name
%p
  %strong Notes:
  = @customer.notes
= link_to 'Edit', edit_customer_path(@customer), :class => 'btn btn-primary'
= link_to 'Back', customers_path, :class => 'btn btn-default'