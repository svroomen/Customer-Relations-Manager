%p#notice= notice
%h1
  Customers
  = link_to 'View Finder', finder_path, :class => 'basic_link'
= link_to new_customer_path, :class => 'btn btn-success btn-large pull-right' do
  %i.fa.fa-plus
  New Customer
%table.table.table-striped
  %thead
    %tr
      %th Full name
      %th Phone number
      %th Email address
      %th Image
      %th Notes
      %th.text-center{:width => '4%'}
  %tbody
    - @customers.each do |customer|
      %tr
        %td= customer.full_name
        %td= customer.phone_number
        %td= customer.email_address
        %td= customer.image
        %td= customer.notes
        %td
          .dropdown

            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              %i.fa.fa-cog

            %ul.dropdown-menu.pull-right{:role => "menu"}

              %li
                = link_to customer, :class => 'dropdown-item' do
                  %i.fa.fa-book
                  Show

              %li
                = link_to edit_customer_path(customer), :class => 'dropdown-item' do
                  %i.fa.fa-pencil-square-o
                  Edit

              %li
                = link_to customer, :class => 'dropdown-item', :method => :delete, :data => {confirm: 'Are you sure you wish to delete this customer?'} do
                  %i.fa.fa-trash
                  Delete